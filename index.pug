doctype html
html(lang="en")
    head
        title svg-preview #{dir}
        style(type="text/css").
            body {
                font-family: sans-serif;
                margin: 0;
            }

            main {
                display: flex;
                flex-wrap: wrap;
                border-top: 1px solid #eee;
                border-left: 1px solid #eee;
            }

            article {
                display: flex;
                align-items: center;
                flex-direction: column;
                width: 10%;
                border-bottom: 1px solid #eee;
                border-right: 1px solid #eee;
                padding: 20px;
                box-sizing: border-box;
            }

            article div {
                display: flex;
                align-items: center;
                flex: 1;
                width: 100%;
                margin-bottom: 10px;
            }

            article svg {
                display: block;
                width: 50%;
                height: auto;
                margin: 0 auto;
            }

            article small {
                font-size: 12px;
                color: #b5b5b5;
            }
    body
        main
            each svg in svgs
                article
                    div !{svg.code}
                    small #{svg.filename}
